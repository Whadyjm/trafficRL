<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Rutas -->
    <route id="route_ns" edges="n_t t_s" />
    <route id="route_we" edges="w_t t_e" />

    <!-- Flujo Norte → Sur: 900 vehículos/hora (1 cada ~4 segundos) -->
    <flow id="flow_ns" route="route_ns"
          begin="0" end="2000"
          vehsPerHour="400"
          departSpeed="max"
          departPos="base"
          departLane="best" />

    <!-- Flujo Oeste → Este: 1200 vehículos/hora (1 cada ~3 segundos) -->
    <flow id="flow_we" route="route_we"
          begin="0" end="2000"
          vehsPerHour="1500"
          departSpeed="max"
          departPos="base"
          departLane="best" />

</routes>